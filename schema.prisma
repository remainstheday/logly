datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Site {
  id    String @id @default(uuid()) @postgresql.Uuid
  Title String @default("")
  slug  String @default("")
}

model Artwork {
  id            String       @id @default(uuid()) @postgresql.Uuid
  siteId        String       @default("")
  title         String       @default("")
  artist        String       @default("")
  slug          String       @unique @default("")
  startDate     DateTime?
  endDate       DateTime?
  status        String?      @default("draft")
  audioFile     String       @default("")
  images        Json?
  artworkImages String       @default("")
  description   String       @default("")
  experiences   Experience[] @relation("Artwork_experiences")
}

model User {
  id       String  @id @default(uuid()) @postgresql.Uuid
  siteId   String  @default("")
  isAdmin  Boolean @default(false)
  name     String  @default("")
  email    String  @unique @default("")
  password String
}

model Experience {
  id               String    @id @default(uuid()) @postgresql.Uuid
  siteId           String    @default("")
  title            String    @default("")
  slug             String    @unique @default("")
  poster           Json?
  experienceImages String    @default("")
  startDate        DateTime?
  endDate          DateTime?
  status           String?   @default("draft")
  description      String    @default("")
  artworks         Artwork[] @relation("Artwork_experiences")
}

model StaticContent {
  id               String @id @default(uuid()) @postgresql.Uuid
  name             String @default("")
  siteId           String @default("")
  title            String @default("")
  poster           Json?
  staticPageImages String @default("")
  slug             String @unique @default("")
  description      String @default("")
}

model Comment {
  id           String @id @default(uuid()) @postgresql.Uuid
  experienceId String @default("")
  siteId       String @default("")
  artworkId    String @default("")
  username     String @default("")
  image        String @default("")
  comment      String @default("")
}