datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(uuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Experience {
  id        String    @id @default(uuid())
  title     String    @default("")
  slug      String    @unique @default("")
  poster    String?
  startDate DateTime?
  endDate   DateTime?
  status    String?   @default("draft")
  content   String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  artworks  Artwork[] @relation("Experience_artworks")
}

model Artwork {
  id                       String       @id @default(uuid())
  title                    String       @default("")
  artist                   String       @default("")
  slug                     String       @unique @default("")
  startDate                DateTime?
  endDate                  DateTime?
  status                   String?      @default("draft")
  audioFile_filesize       Int?
  audioFile_mode           String?
  audioFile_filename       String?
  images                   String?
  overview                 String       @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  from_Experience_artworks Experience[] @relation("Experience_artworks")
}