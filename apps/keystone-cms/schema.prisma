datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Site {
  id     String @id @default(uuid()) @postgresql.Uuid
  siteId String @default("")
  title  String @default("")
  url    String @unique @default("")
}

model Experience {
  id               String               @id @default(uuid()) @postgresql.Uuid
  status           ExperienceStatusType @default(draft)
  title            String               @default("")
  dateCreated      DateTime             @default(now())
  experienceStart  DateTime?            @postgresql.Date
  experienceEnd    DateTime?            @postgresql.Date
  experienceImages String               @default("")
  altText          String               @default("")
  audioFile        String               @default("")
  description      Json                 @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  relatedArtifacts Artifact[]           @relation("Artifact_relatedExperiences")
  url              String               @unique @default("")
  siteId           String               @default("")
  qrCodes          Json?                @default("[]")
}

model Artifact {
  id                 String             @id @default(uuid()) @postgresql.Uuid
  status             ArtifactStatusType @default(draft)
  title              String             @default("")
  dateCreated        DateTime           @default(now())
  artist             String             @default("")
  artifactImages     String             @default("")
  caption            String             @default("")
  altText            String             @default("")
  audioFile          String             @default("")
  description        Json               @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  relatedExperiences Experience[]       @relation("Artifact_relatedExperiences")
  url                String             @unique @default("")
  siteId             String             @default("")
  qrCodes            Json?              @default("[]")
}

model User {
  id       String  @id @default(uuid()) @postgresql.Uuid
  siteId   String  @default("")
  isAdmin  Boolean @default(false)
  name     String  @default("")
  email    String  @unique @default("")
  password String
}

model SiteContent {
  id               String @id @default(uuid()) @postgresql.Uuid
  name             String @default("")
  title            String @default("")
  siteLogo         String @default("")
  logoWidth        Int?
  logoHeight       Int?
  staticPageImages String @default("")
  description      Json   @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  qrCode           Json?  @default("[]")
  url              String @unique @default("")
  siteId           String @default("")
}

model Comment {
  id        String    @id @default(uuid()) @postgresql.Uuid
  username  String    @default("")
  timestamp DateTime?
  comment   String    @default("")
  image     String    @default("")
  query     Json?     @default("{}")
  siteId    String    @default("")
}

enum ExperienceStatusType {
  published
  draft
}

enum ArtifactStatusType {
  published
  draft
}